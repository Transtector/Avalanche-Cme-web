// CME styles

// app-wide colors
bg-color = #E6E6E6
fg-color = #4D4D4D
link-color = #00B7FF

button-bg-color = #3EA4E1

warning-color = #FFD42A
error-color = #FF2222

width-breakpoint = 700px

header-bg-color = #EEE
header-tab-border-color = #999
header-tab-radius = 20px
header-gradient-top-color = #7AB9E3
header-gradient-bottom-color = button-bg-color
header-gradient-bottom-stop = 45%

@import style-mixins
@import style-icons

// core html tag styles
html,
body
	font 14px 'Helvetica Neue', Helvetica, Arial, sans-serif
	line-height 1.4em
	background bg-color
	color fg-color
	margin 0
	padding 0
	overflow-x hidden
	font-smoothing antialiased
		
a
	color link-color
	
input[type="text"]
	outline 0

.hidden
	display none !important

// default .btn (button) styles 
.btn
	background-color button-bg-color
	background-repeat no-repeat
	background-position center center
	background-size 32px 32px
	color #fff
	font-size 20px
	height 48px
	width 64px
	border 0
	outline 0
	transition opacity 0.3s ease 0s

.btn.icon-left
	position relative
	padding-left 64px
	background-position-x 16px
	background-color transparent
	width auto
	> div
		text-align left
		color fg-color
	> div:last-child
		font-size 70%
		color lighten(fg-color, 30%)

.btn.icon-left > span.btn-icon
	position absolute
	width 48px
	height 48px
	left 8px
	top 0
	border-radius 100%
	background-color button-bg-color
	background-repeat no-repeat
	background-position center center	
	background-size 32px 32px

.btn:hover
	opacity 0.75
	cursor pointer

.btn:disabled
	opacity 1
	background-color grayscale(button-bg-color)
	cursor default
	

.loaderWrapper
	position absolute
	left 0
	top 0
	right 0
	bottom 0
	background-color rgba(button-bg-color, 0.5)
	.loader
		margin 100px auto
		font-size 25px
		width 1em
		height 1em
		border-radius 50%
		position relative
