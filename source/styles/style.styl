// top-level application panel (holding content for dashboard, alarms, settings)
.panel
	position relative
	
.panel-header
	position relative
	padding 10px
	background-color header-bg-color
	border-bottom 1px solid #ccc
	.title
		font-size 150%
	.subtitle
		margin 0.5em 0 0 0.5em
		font-style italic

.panel-content::after
	content ''
	display block
	clear both	

