/* :not(:required) hides these rules from IE9 and below */
.throbber-loader:not(:required)
	animation throbber-loader 2000ms 300ms infinite ease-out
	background #dde2e7
	position absolute
	text-indent -9999px
	width 10px
	height 10px
	top 50%
	margin-top -5px
	border-radius 100%
.throbber-loader:not(:required):before, 
.throbber-loader:not(:required):after
	background #dde2e7
	content '\200B'
	position absolute
	width 10px
	height 10px
	border-radius 100%
.throbber-loader:not(:required):before
	animation throbber-loader 2000ms 150ms infinite ease-out
	right 10px
.throbber-loader:not(:required):after
	animation throbber-loader 2000ms 450ms infinite ease-out
	left 10px
.throbber-loader.invisible, 
.throbber-loader.invisible:before, 
.throbber-loader.invisible:after
	background transparent

@-webkit-keyframes throbber-loader
	0%
		background #dde2e7
	10%
		background #6b9dc8
	40%
		background #dde2e7

@keyframes throbber-loader
	0%
		background #dde2e7
	10%
		background #6b9dc8
	40%
		background #dde2e7


