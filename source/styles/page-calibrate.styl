// Styles for the indepedent Calibration page

.calibrate
	position relative
	padding 10px
	.section > h3
		position relative
		line-height 32px
		clear both
		&::before
			position relative
			display inline-block
			text-align center
			width 32px
			height 32px
			margin-right 16px
			color #fff
			border-radius 100%
			background-color button-bg-color
		&#one::before
			content '1'
		&#two::before
			content '2'
		&#three::before
			content '3'
	
	.section-content
		margin 0 50px
		
	.buttons button
		margin-right 30px
		width auto

	.lineitem
		margin-bottom 16px
		&:last-child
			margin-bottom 0				
	.lineitem label
		display inline-block
		width 160px
	.lineitem input
		font-size 120%
		font-family monospace
	.lineitem input.error
		border-color error-color
	.lineitem input.short
		width  70px
		&:last-child
			margin-left 10px
			
	// Credit for CSS tabs
	// Original: https://css-tricks.com/functional-css-tabs-revisited/
	// Updates:  http://codepen.io/Merri/details/bytea
	.tabs
		font-size 0
	.tabs:after
		clear both
		content ''
		display table
	.tabs .tab
		display inline	
	.tabs .tab-label
		background-color #eee
		border 1px solid #ccc
		display inline-block
		font-size 16px
		font-size 1rem
		left 1px
		margin-left -1px
		padding 10px
		position relative
		vertical-align bottom
		cursor pointer
		&.icon-lock
			padding-right 40px
			&:after
				position absolute
				top 0
				bottom 0
				right 10px
				width 30px
				content ''
				background-repeat no-repeat
				background-position center center
				background-image svg_alt('lock', '0 0 50 50', #ccc)
			
			
	.tabs .tab > [type=radio]
		clip rect(0, 0, 0, 0)
		height 1px
		opacity 0
		position fixed
		width 1px
		z-index -1
	.tabs .tab-panel
		display inline-block
		overflow hidden
		position relative
		height 0
		width 0
	.tabs .tab-content
		box-sizing border-box
		display inline-block
		background-color #fff
		padding 20px
		border 1px solid #ccc
		float left
		font-size 16px
		font-size 1rem
		margin-top -1px
		width 100%
	.tabs .sensor
		position relative
		float left
		padding 40px 10px 20px 10px
		margin-right 20px
		margin-bottom 20px
		border 1px solid button-bg-color
		border-radius 3px
		box-shadow 0 2px 3px 0 rgba(0,0,0,0.2)
		& h5
			position absolute
			background-color button-bg-color
			color #fff
			margin 0
			left 0
			top 0
			right 0
			padding 5px 10px
			font-size 120%		
	.tabs .tab [type=radio]:checked + .tab-label
		background-color #fff
		color button-bg-color
		border-bottom-width 0
		padding-bottom 11px
		z-index 1
	.tabs .tab [type=radio]:checked ~ .tab-panel
		display inline
				
		