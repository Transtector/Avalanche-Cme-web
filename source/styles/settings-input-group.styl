


/* input-groups used in the config panel */
.input-group
	position relative
	margin 10px
	width 380px
	float left
	text-align left
	overflow hidden
	box-shadow 1px 1px 3px #ccc
	
.input-group > button
	height 32px
	width 380px

.input-group-title button
	width 100%
	height 32px

#settings-restart .input-group-title > button
	background-color error-color
	
.input-group-title::after
	content ''
	position absolute
	width 0
	height 0
	left 6px
	top 12px
	border-left 8px solid transparent
	border-right 8px solid transparent
	border-top 8px solid #fff
	transition all 0.3s ease 0s
		
.input-group.collapsed
	.input-group-title::after
		transform rotate(-90deg)
	.input-group-content
		padding 0 10px
		height 0

.input-group-content
	position relative
	padding 10px
	overflow hidden
	background #fff
	transition all 0.3s ease 0s
	> ul
		margin 0
		padding 0
		list-style none
	.screen
		display none
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		background black
		opacity 0.2
	.screen.active
		display block

.input-group-cluster
	margin 10px auto
	white-space nowrap
	border-bottom 1px solid #ccc
	> label
		display block
		color #006EC5
		text-transform capitalize
		font-size 90%
		font-weight bold
	> input[type="text"],
	> input[type="password"]
		margin-left 8px
		width 100%
		+placeholder()
			text-transform capitalize
	input, a, .led-text
		font-size 20px
		line-height 40px
		border 0
		background transparent
		outline none
	input[type="checkbox"], 
	input[type="radio"]
		zoom 2
		margin-right 5px
		vertical-align middle
	input[readonly]
		color #999
	a
		display block
		width 360px
		text-align center
	textarea
		width 334px
		height 40px
		outline none
		resize vertical
	p
		white-space normal
		font-style italic
		padding 0 20px

	.radio-group
		padding 10px
		label
			display block
		> div
			margin-top 10px
			
	#ntpGroup, #tempGroup
		padding 10px
		position relative
		#status
			border 0
			margin 0
			position absolute
			top -10px
			right 10px
		#ta-wrapper label
			margin-top 10px
			display block

.input-group-cluster.no-border
	border-bottom-color transparent

.drop-target
	border 3px dashed #ccc
	border-radius 4px
	background-color #ECEFF1
	background-repeat no-repeat
	background-position	50% 0
	background-image url('data:image/png;base64,');
	text-align center
	h1, h2
		margin 0
		color #95A7B6
	h1
		margin-top 100px
		font-size 170%
	h2
		margin-bottom 5px
		font-size 100%

.drop-target.active
	border-style solid

.upload-widget
	position relative
	progress,
	.progress-bar
		position absolute
		visibility hidden
		left 10%
		width 80%
		top 50px
	.active
		visibility visible

.input-group-content table
	width 100%
	th
		background-color #eee
	th:not(:first-child),
	td:not(:first-child)
		text-align center


li.input-group-cluster
	position relative
	padding 8px 0
	font-size 90%
	text-align right
	> .btn
		background-color transparent
	> .btn.icon-left
		float left
	> .btn:disabled
		color #ddd
		opacity 0.4


.input-group-buttons
	margin -10px // changes with .input-group margin above
	margin-top 0
	border-top 1px solid bg-color
	.btn
		background transparent
		color #006EC5
		width 50%
	.btn:first-child
		border-right 1px solid bg-color
	.btn:disabled
		background-color transparent
		color #ddd
	.btn.full-width
		width 100%
		border-right 0
